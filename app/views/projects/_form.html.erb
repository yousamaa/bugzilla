<div class="card-body">
  <%= form_with(model: project, local: true) do |form| %>
    <% if project.errors.any? %>
      <div id="error_explanation" class="alert alert-danger alert-dismissible" role="alert">
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        <strong>
          <%= I18n.t("errors.messages.not_saved",
                    count: project.errors.count,
                    resource: project.class.model_name.human.downcase)
          %>
        </strong>
        <% project.errors.full_messages.each do |message| %>
          <div>
            <%= message %>
          </div>
        <% end %>
      </div>
    <% end %>
    <%= form.text_field :title, autocomplete: "title", class: "form-control", placeholder: "Title" %>
    <br>
    <%= form.text_field :description, autocomplete: "description", class: "form-control", placeholder: "Description" %>
    <br>
    <%= form.label :developer %>
    <br>
    <%= form.select :developer_id, Developer.all.map { |d| [d.name, d.id] }, include_blank: true %>
    <br><br>
    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
</div>
