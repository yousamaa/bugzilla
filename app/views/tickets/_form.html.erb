<%= form_with(model: ticket, local: true) do |form| %>
  <% if ticket.errors.any? %>
    <div id="error_explanation" class="alert alert-danger alert-dismissible" role="alert">
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      <strong>
        <%= I18n.t("errors.messages.not_saved",
                  count: ticket.errors.count,
                  resource: ticket.class.model_name.human.downcase)
        %>
      </strong>
      <% ticket.errors.full_messages.each do |message| %>
        <div>
          <%= message %>
        </div>
      <% end %>
    </div>
  <% end %>

  <%= form.text_field :title, autocomplete: "title", class: "form-control", placeholder: "Title" %>
  <br>
  <%= form.label :type %>
  <br>
  <%= form.select :type, Ticket.types.keys, include_blank: true %>
  <br>
  <% if ticket.Bug? %>
    <br>
    <%= form.label :status %>
    <br>
    <%= form.select :status, Bug.statuses.keys, include_blank: true %>
    <br><br>
  <% else %>
    <br>
    <%= form.label :status %>
    <br>
    <%= form.select :status, Feature.statuses.keys, include_blank: true %>
    <br><br>
  <% end %>
  <%= form.text_field :description, autocomplete: "description", class: "form-control", placeholder: "Description" %>
  <br>
  <%= form.date_field :deadline, as: :date, value: form.object.try(:strftime,"%m/%d/%Y"), class: 'form-control' %> 
  <br>
  <%= form.label :project %>
  <br>
  <%= form.select :project_id, Project.all.map { |p| [p.title, p.id] }, include_blank: true %>
  <br><br>
  <%= form.label :screen_shot %>
  <br>
  <%= form.file_field :screen_shot %>
  <br><br>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
