<h1>Tickets</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <%= ticket.title %>
      <br>
      <%= ticket.type %>
      <br>
      <%= ticket.status %>
      <br>
      <%= ticket.description %>
      <br>
      <%= ticket.deadline %>
      <br>
      <%= link_to 'Show', ticket %> | 
      <%= link_to 'Edit', edit_ticket_path(ticket) %> | 
      <%= link_to 'Destroy', ticket, method: :delete, data: { confirm: 'Are you sure?' } %>
      <br>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ticket', new_ticket_path %>
